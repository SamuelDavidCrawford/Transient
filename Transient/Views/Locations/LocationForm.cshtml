@model Transient.ViewModels.LocationFormViewModel
@{
    ViewBag.Title = "New";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Title</h2>


@using (Html.BeginForm("Save", "Locations"))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Location.Name)
        @Html.TextBoxFor(m => m.Location.Name, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Location.Address)
        @Html.TextBoxFor(m => m.Location.Address, new { @class = "form-control" })
    </div>
    @Html.HiddenFor(m => m.Location.Id)
    <btn type="submit" class="btn btn-primary">Save</btn>
}

