@model IEnumerable<Transient.Models.Vehicle>
@{
    ViewBag.Title = "Vehicles";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <h2>Vehicles</h2>
    @if (Model.Count() == 0)
    {
        <p>We do not have any vehicles</p>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Vehicle</th>
                        <th>Vehicle Type</th>
                        <th>Stocked</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var vehicle in Model)
                    {
                        <tr>
                            <td>@Html.ActionLink(vehicle.Name, "Details", "Vehicles", new { id = vehicle.Id }, null)</td>
                            <td>@vehicle.VehicleType.Name</td>
                            <td>@vehicle.NumberInStock</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>



