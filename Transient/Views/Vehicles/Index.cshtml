@model IEnumerable<Transient.Models.Vehicle>
@{
    ViewBag.Title = "Vehicles";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Vehicles</h2>

@if (Model.Count() == 0)
{
    <p>We do not have any vehicles in stock.</p>
}
else
{
    <table class=“table table-striped table-hover ”>
        <thead>
            <tr>
                <th>Vehicle</th>
                <th>Vehicle Type</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var vehicle in Model)
            {
                <tr>
                    <td>@Html.ActionLink(vehicle.Name, "Details", "Vehicles", new { id = vehicle.Id }, null)</td>
                    <td>@vehicle.VehicleType.Name</td>
                </tr>
            }
        </tbody>
    </table>
}



